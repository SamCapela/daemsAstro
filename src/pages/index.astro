---
import StreamPlayer from "../components/StreamPlayer.jsx";
import TwitchChat from "../components/TwitchChat.jsx";
import ClipsSection from "../components/ClipsSection.jsx";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Daems_ - Twitch Stream">
  <main class="container mx-auto p-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- Stream Player -->
      <div class="md:col-span-2">
        <StreamPlayer client:load />
      </div>
      <!-- Chat -->
      <div class="md:col-span-1">
        <TwitchChat client:load />
      </div>
    </div>
    <!-- Clips Section -->
    <ClipsSection client:load />
  </main>
</Layout>
